<% include partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>This is the campgrounds page!</h1>
            <p>View our hand-picked camp grounds</p>
            <p><a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a></p>
        </div>
    </header>


    <div class="row" style:"display:flex; flex-wrap: wrap">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <figure class="figure img-thumbnail">
                    <img src="<%=campground.image%>" class=" figure-img img-thumbnail">
                    <h4 class="figure-caption text-center"> <%=campground.name%></h4>
                </figure>
            </div>
        <% }); %>
    </div>

    


</div>


<% include partials/footer %>